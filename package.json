{
  "name": "yesno",
  "version": "0.0.0",
  "scripts": {
    "eslint": "eslint app boot config",
    "start": "grown up",
    "build": "tarima -fq",
    "repl": "grown repl --debug",
    "load": "grown seed -- public/data/*.json",
    "dev": "tarima -p 3001 -P localhost:8080 -e",
    "dev:reload": "tarima -P localhost:8080 -p 3001 -r app/reload",
    "dev:grown": "tarima -P localhost:8080 -p 3001 -- grown up -P 8080"
  },
  "tarima": {
    "src": "_src",
    "dest": "build",
    "public": "public",
    "watch": [
      ".env",
      "app",
      "package.json"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "bundle": [
      "**/views/**"
    ],
    "rename": [
      "**:{fullpath/1}",
      "**/{views,public}/**:{fullpath/1}"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "plugins": [
      "talavera"
    ],
    "pluginOptions": {
      "talavera": {
        "dest": "images"
      }
    },
    "bundleOptions": {
      "bundleCache": true,
      "entryCache": true,
      "extensions": {
        "js": "es6",
        "css": "less"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.1",
    "csurf": "^1.9.0",
    "grown": "^0.1.2",
    "json-schema-sequelizer": "^0.0.3",
    "route-mappings": "^0.3.2",
    "serve-static": "^1.12.1",
    "sqlite3": "^3.1.8"
  },
  "optionalDependencies": {
    "chokidar": "^1.6.1",
    "tarima-lr": "^0.2.2"
  },
  "devDependencies": {
    "buble": "^0.15.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "less": "^2.7.2",
    "less-plugin-autoprefix": "^1.5.1",
    "pug": "^2.0.0-beta.12",
    "rollup": "^0.41.6",
    "talavera": "^0.2.2",
    "tarima": "^2.0.2",
    "vue-template-compiler": "^2.3.2"
  }
}
